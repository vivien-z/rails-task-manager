<div>
  <h1><%= @task.title %></h1>
  <%= link_to "Edit task", edit_task_path(@task), :class => "btn btn-primary mb-2 py-1" %>
</div>

<p id="details"><%= @task.details %></p>

<% if @task.completed %>
  <p><i class="far fa-check-square"></i>This task is completed</p>
<% else %>
  <p><i class="far fa-square"></i>This task is not completed yet</p>
<% end %>

<hr>

<%= link_to "Back to list", tasks_path, :class => :link %>
