<h1>My tasks</h1>

<ul class="list pl-0">
  <% @all_tasks.each do |task| %>
    <li class="d-flex align-item-bottom">
      <% if task.completed %>
          <i class="far fa-check-square"></i>
      <% else %>
          <i class="far fa-square"></i>
      <% end %>
      <%= link_to "#{task.title}", task_path(task), :class => :link %>
      <%= link_to(task_path(task),
                  method: :delete,
                  data: { confirm: "Are you sure?"}) do %>
        <i class="far fa-trash-alt ml-1"></i>
      <% end %>
    </li>
  <% end %>
</ul>

<hr>

<i class="fas fa-plus link"></i><%= link_to "Add a new task", new_task_path, :class => :link %>
